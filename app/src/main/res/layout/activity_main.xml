<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sweetsavoryapp.MainActivity"
    android:background="@color/colorPrimaryDark">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sweet"
        android:textSize="20sp"
        android:id="@+id/headerleft"
        android:textColor="#FFFFFF"
        android:paddingLeft="40dp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:textColor="#FFFFFF"
        android:paddingRight="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Savory"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:id="@+id/headerright"/>
    <ScrollView
        android:layout_below="@+id/mainpic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="2dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button

                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:padding="5dp"
                android:id="@+id/button1"
                android:background="@drawable/brooklyn"
                android:textColor="#FFFFFF"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:padding="5dp"
                android:id="@+id/button2"
                android:background="@drawable/hispanic"
                android:textColor="#FFFFFF"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:padding="5dp"
                android:id="@+id/button3"
                android:background="@drawable/middleeast"
                android:textColor="#FFFFFF"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:padding="5dp"
                android:id="@+id/button4"
                android:background="@drawable/asia"
                android:scaleType="fitXY"
                android:textColor="#FFFFFF"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:padding="5dp"
                android:id="@+id/button5"
                android:background="@drawable/caribbean"
                android:textColor="#FFFFFF"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:padding="5dp"
                android:id="@+id/button6"
                android:background="@drawable/euorpe"
                android:textColor="#FFFFFF"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="58dp"


                android:padding="5dp"
                android:id="@+id/button7"
                android:background="@drawable/africa"
                android:textColor="#FFFFFF"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:padding="5dp"
                android:id="@+id/button8"
                android:background="@drawable/america"

                android:textColor="#FFFFFF"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:padding="5dp"
                android:id="@+id/button9"
                android:background="@drawable/southerncomfort"
                android:textColor="#FFFFFF"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:padding="5dp"
                android:id="@+id/drinks"
                android:background="@drawable/drinks"
                android:textColor="#FFFFFF"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:padding="5dp"
                android:id="@+id/button10"
                android:background="@drawable/contact"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/mainpic"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
